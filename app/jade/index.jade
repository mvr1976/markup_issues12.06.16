extends layout
block content
    div.wrapper__welcome        
        button.welcome_login Авторизоваться
        div.avatar__vert__align__wrap
            div.avatar
                div.avatar__img__store
                    img.ava__img(src="app/img/ava.jpg")                    
                h3.avatar_name Максим Рудик
                span Личный сайт веб-разработчика
                ul.welcome__social__list                    
                    li.welcome__social__item
                        a.welcome__social__link
                            svg(class="svg-socials--vk-dims svg_welcome_social vk" width ="30.011" height="17.123" viewbox="0 0 30.011 17.123")
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="app/icons/sprites/sprite_social.svg#vk")
                    li.welcome__social__item
                        a.welcome__social__link
                            svg(class="svg-socials--github-dims svg_welcome_social github" width ="26" height="22" viewbox="0 0 26 22")
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="app/icons/sprites/sprite_social.svg#github")                    
                    li.welcome__social__item
                        a.welcome__social__link
                            svg(class="svg-socials--in-dims svg_welcome_social linkedin" width ="24" height="23" viewbox="0 0 24 23")
                                use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="app/icons/sprites/sprite_social.svg#in")                
                ul.welcome__nav__list
                    li.welcome__nav__item
                        a.welcome__nav__link(href="my_works.html") Мои работы
                    li.welcome__nav__item
                        a.welcome__nav__link(href="about_me.html") Обо мне
                    li.welcome__nav__item
                        a.welcome__nav__link(href="my_blog.html") Блог        
    footer.footer &copy Максим Рудик | создано с любовью в Loftschool | 2016